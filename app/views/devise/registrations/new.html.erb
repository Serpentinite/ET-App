<div class="log-content">
  <div class="logs">
    <div class="log">
      <div class="log-form form">
        <div class="text-center">
          <h2>新規登録</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-group">
              <%= f.label :name, '名前' %><br />
              <%= f.text_field :name, autofocus: true %>
            </div>
            <div class="form-group">
              <%= f.label :height, '身長' %><br />
              <%= f.number_field :height, step: "0.1", autofocus: true %>
            </div>
            <div class="form-group ">
              <%= f.label :email, 'メールアドレス' %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
            <div class="form-group ">
              <%= f.label :password, 'パスワード' %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上で入力)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
            <div class="form-group ">
              <%= f.label :password_confirmation, 'パスワード確認' %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
            <div class="actions ">
              <%= f.submit "登録する" , class: 'btn btn-success' %>
           </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

